  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug/Monitor",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/server.js",
      "restart": true,
      // "console": "integratedTerminal",
      // "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js",
        "<eval>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server Debug",
      "program": "${workspaceFolder}/bin/www"
    }
  ]
}
